<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Limes-Service</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LimeServlet</servlet-name>
    <servlet-class>org.linkeddata.stack.limes.LimesRun</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LimesRun</servlet-name>
    <servlet-class>org.linkeddata.stack.limes.LimesRun</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LimesReview</servlet-name>
    <servlet-class>org.linkeddata.stack.limes.LimesReview</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoadFile</servlet-name>
    <servlet-class>org.linkeddata.stack.limes.LoadFile</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImportRDF</servlet-name>
    <servlet-class>org.linkeddata.stack.limes.ImportRDF</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LimeServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LimesRun</servlet-name>
    <url-pattern>/LimesRun</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LimesReview</servlet-name>
    <url-pattern>/LimesReview</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoadFile</servlet-name>
    <url-pattern>/LoadFile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImportRDF</servlet-name>
    <url-pattern>/ImportRDF</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CORS</filter-name>
    <filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CORS</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>